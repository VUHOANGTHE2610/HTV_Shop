@model IEnumerable<SV21T1020178.DomainModels.Shipper>
@{
    //Layout = null
    ViewBag.Title = "Quản lý người giao hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <!--Search Form-->
        <form id="formSearch" action="~/Shipper" method="get">
            <div class="input-group">

                <input name="searchValue"
                       type="text"
                       class="form-control"
                       placeholder="Nhập tên hãng giao hàng cần tìm"
                       autofocus />

                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="fa fa-search"><</i>
                    </button>

                    <a href="~/Shipper/Create" class="btn btn-primary" style="margin-left:5px">
                        <i class="fa fa-plus"></i> Bổ sung
                    </a>
                </div>
            </div>
        </form>

        <!--Hiển thị dữ liệu-->
        <p style="margin-top:10px">
            có <strong>@ViewBag.RowCount</strong> hãng giao hàng trong tổng số <strong>@ViewBag.PageCount</strong> trang
        </p>
        <div class="table-responsive">
            <table class="table table-bodered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th>Tên hãng giao hàng</th>
                        <th>Số điện thoại</th>
                        <th style="width:80px"></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ShipperName</td>
                            <td>@item.Phone</td>
                            <td class="text-right">
                                <a href="~/Shipper/Edit/@item.ShipperID" class="btn btn-xs btn-info">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/Shipper/Delete/@item.ShipperID" class="btn btn-xs btn-danger">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

        <div class="text-center">
            <ul class="pagination">
                @for (int p = 1; p <= ViewBag.PageCount; p++)
                {
                    if (p == ViewBag.Page)
                    {
                        <li class="active"><a href="#">@p</a></li>
                    }
                    else
                    {
                        <li><a href="~/Shipper?page=@p&searchValue=@ViewBag.SearchValue">@p</a></li>
                    }
                }
            </ul>
        </div>

    </div>
</div>